@model BLL.ViewModels.ProfileViewModel

@{
    using (Html.BeginForm("EditProfile", "Account", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        ;

        <div class="form-wrap">
            <label asp-for="Name" , class="sr-only">Name</label>

            <div>
                <input class="form-control" asp-for="Name" id="Name" type="text" placeholder="Name"
                       value="@{ if (Model.Name != default) { @Model.Name } }">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-wrap">
            <label asp-for="LastName" id="Surname" class="sr-only">Last name</label>

            <div>
                <input class="form-control" asp-for="LastName" type="text" placeholder="Last name"
                       value="@{ if (Model.LastName != default) { @Model.LastName } }">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-wrap">
            <label asp-for="Email" , class="sr-only">Email</label>

            <div>
                <!-- Email configured on registration -->
                <input class="form-control" id="Email" asp-for="Email" type="text" placeholder="Email" value="@Model.Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-wrap">
            <label asp-for="Phone" id="Phone" class="sr-only">Phone</label>

            <div>
                <!-- Phone configured on registration -->
                <input class="form-control" asp-for="Phone" type="text" placeholder="Phone" value="@Model.Phone">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-wrap">
            <button class="btn primary-btn primary-btn-lg" type="submit">
                Submit
            </button>
        </div>
    }
}
