@{
    ViewData["Title"] = "Blogs";
    Layout = "_AdminPanelLayout";
}
@model BLL.ViewModels.AdminModels.BlogPostsVM
<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Blog posts</h3>

                <div class="box-tools">
                    <a class="btn btn-primary" asp-action="CreateBlogPost">Create Post</a>
                    <div class="input-group input-group-sm hidden-xs">
                        <p>Filter blogs</p>
                        <select id="sport-selector" onchange="getTableItems()" class="input-group" asp-for="Sport" asp-items="Model.Sports">
                        </select>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody id="table">
                        <tr>
                            <th>Author</th>
                            <th>Date</th>
                            <th>Sport</th>
                            <th>Header</th>
                        </tr>
                        @foreach (var v in Model.BlogsTableItems)
                        {
                            <tr>
                                <td>@v.Author</td>
                                <td>@v.Published.ToString("dd-MM-yyyy")</td>
                                <td>@v.Sport</td>
                                <td>@v.Header</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>