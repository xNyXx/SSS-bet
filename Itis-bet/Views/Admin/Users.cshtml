@{
    ViewData["Title"] = "Users";
    Layout = "_AdminPanelLayout";
}
@using DAL.Models
@model IEnumerable<User>
<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Comments</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm hidden-xs">
                        <p>Filter Users</p>
                        <form class="form-inline" method="get" asp-controller="Admin" asp-action="Users">
                            <div class="form-group">
                                <input class=" form-control" name="userId" placeholder="User Id" />
                            </div>
                            <input class="btn btn-primary" type="submit" value="Find" />

                        </form>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody id="table">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                        @foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.Id</td>
                                <td>@v.UserName</td>
                                <td><a class="btn btn-primary" href="@Url.Action("ViewUser","Admin",new {userId = v.Id})">View</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>