@{
    ViewData["Title"] = "Админка";
    Layout = "_AdminPanelLayout";
}
@model BLL.ViewModels.AdminModels.CreateBlogVm
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Create article</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" asp-action="CreateBlogPost" method="post" enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label asp-for="Sport"></label>
                <select class="form-control" asp-for="Sport" asp-items="Model.Sports"></select>
                <span asp-validation-for="Sport"></span>
            </div>
            <div class="form-group">
                <label asp-for="Header"></label>
                <input class="form-control" asp-for="Header" />
                <span asp-validation-for="Header"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" />
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea class="form-control" asp-for="Content"></textarea>
                <span asp-validation-for="Content"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture"></label>
                <input class="form-control-file" asp-for="Picture"/>
                <span asp-validation-for="Picture"></span>
            </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <input type="submit" class="btn btn-primary" value="Create"/>
        </div>
    </form>
</div>