@{
    ViewData["Title"] = "Comments";
    Layout = "_AdminPanelLayout";
}
@using DAL.Models
@model IEnumerable<Comments>
<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Comments</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm hidden-xs">
                        <p>Filter comments</p>
                        <form class="form-inline" method="get" asp-controller="Admin" asp-action="Comments">
                            <div class="form-group">
                                <input class=" form-control" name="articleId" placeholder="Article Id" />
                            </div>
                            <input class="btn btn-primary" type="submit" value="Find" />

                        </form>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody id="table">
                        <tr>
                            <th>Author</th>
                            <th>Text</th>
                            <th></th>
                        </tr>
                        @foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.User.UserName</td>
                                <td>@v.Text</td>
                                <td><a class="btn btn-primary" href="@Url.Action("DeleteComment","Admin",new { articleId=v.ArticleId,commentId = v.Id })">Delete</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>